<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Suite">
	<!-- supports:test/stage  -->
	<parameter name="env" value="test" />

	<test name="E2E API Tests">
		<classes>
			<class name="tests.E2ETest" />
		</classes>
	</test>
	<test name="Single API Tests">
		<classes>
			<class name="tests.LoginTest" />
			<class name="tests.RegisterTest" />
			<class name="tests.RetrieveUserTest" />
			<class name="tests.UpdateUserTest" />
			<class name="tests.DeleteUserTest" />
		</classes>
	</test>
</suite>
